<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_hulk"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.fragments.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">




    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/defaul"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <!--        edit text with white solid background-->
    <EditText
        android:id="@+id/editTextNickName"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_border_button"
        android:hint="  Nickname"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/my_buble_message"
        android:textColorHint="@color/black_alpha40" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_border_button"
        android:hint="  avenger@email.com"
        android:inputType="textEmailAddress"
        android:focusable="false"
        android:textStyle="italic"
        android:padding="10dp"
        android:textColor="#5CAEEF"
        android:textColorHint="@color/black_alpha40" />

    <!--        edit text with white border-->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_border_button"
        android:hint="  New Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/my_buble_message"
        android:textColorHint="@color/black_alpha40" />

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_border_button"
        android:hint="  Re-enter new password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColor="@color/my_buble_message"
        android:textColorHint="@color/black_alpha40" />


    <EditText
        android:id="@+id/editTextBio"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/bio_border_button"
        android:inputType="text|textMultiLine"
        android:gravity="top"
        android:padding="20dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:textColor="@color/my_buble_message"
        android:hint="You can write about yourself... just make sure to be as real as we all are on social media :)"
        android:textColorHint="@color/black_alpha40" />

    <LinearLayout
        android:paddingHorizontal="50dp"
        android:layout_marginBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_marginHorizontal="20dp"
            android:id="@+id/cancel_button"
            android:theme="@style/Theme.Design"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_border_button"
            android:backgroundTintMode="add"
            android:text="Cancel"
            android:textColor="@color/white" />
        <Button
            android:layout_marginHorizontal="20dp"
            android:id="@+id/update_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_border_button"
            android:backgroundTintMode="add"
            android:text="Update"
            android:textColor="@color/white" />
    </LinearLayout>

    <Button
        android:id="@+id/delete_button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/login_border_button"
        android:backgroundTintMode="add"
        android:text="Delete Account"
        android:textColor="@color/white" />

    </LinearLayout>
</ScrollView>
</LinearLayout>